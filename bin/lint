#!/usr/bin/env bash
set -e

node_modules/.bin/flow

# run the 'standard-js' linter on the source code
errors=$(standard -v 'src/**/*.js' | grep -v no-undef | wc -l | tr -d ' ')
if [ $errors -gt 0 ]; then
  echo Found standardJS errors in the test code:
  standard -v 'src/**/*.js' | grep -v no-undef
  exit 1
fi


# run the 'standard-js' linter on the test code
errors=$(standard -v 'features/**/*.js' | grep -v no-unused-expressions | wc -l | tr -d ' ')
if [ $errors -gt 0 ]; then
  echo Found standardJS errors in the test code:
  standard -v 'features/**/*.js' | grep -v no-unused-expressions
  exit 1
fi

dependency-lint
